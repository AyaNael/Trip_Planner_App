<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7F3">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/abc_ic_ab_back_material"
            app:tint="#2E6D66" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activities"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="#2E6D66"/>
    </LinearLayout>


    <GridLayout
        android:id="@+id/gridActivities"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rowCount="5"
        android:columnCount="3"
        android:alignmentMode="alignMargins"
        android:padding="12dp"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:id="@+id/itemSwimming"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:background="@drawable/activity_unselected"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/swim"
                app:tint="#2E6D66" />

            <TextView android:text="Swimming"
                android:textColor="#2E6D66"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>


        <!-- Snow Sport -->
        <LinearLayout
            android:id="@+id/itemSnowSport"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:background="@drawable/activity_unselected"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView android:layout_width="32dp" android:layout_height="32dp"
                android:src="@drawable/snow_sport"
                app:tint="#2E6D66"/>

            <TextView android:text="Snow Sports"
                android:textColor="#2E6D66"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>


